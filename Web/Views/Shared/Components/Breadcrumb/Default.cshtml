@model MenuItem


@if (Model != null)
{
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">@Model.Name</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item">@Model.ParentMenuItem.Name</li>
                        <li class="breadcrumb-item active">@Model.Name</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Main content -->
}
