<!DOCTYPE html>

<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>@ViewData["Title"] - Zee Web</title>

    <partial name="_Styles" />

</head>

<body class="hold-transition sidebar-mini">

    <div class="wrapper">

        @await Component.InvokeAsync("TopNavigation")

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <partial name="_BrandLogo" />
            @await Component.InvokeAsync("MainNavigation")

        </aside>

        <div class="content-wrapper">

            @await Component.InvokeAsync("Breadcrumb", @ViewContext.RouteData.Values["Controller"])

            <div class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- /.content -->

            <aside class="control-sidebar control-sidebar-dark">
                <div class="p-3">
                    <h5>Title</h5>
                    <p>Sidebar content</p>
                </div>
            </aside>

            <partial name="_Footer" />

            <partial name="_LoginPartial" />
        </div>
    </div>

    <partial name="_Scripts" />
    @RenderSection("Scripts", required: false)
</body>

</html>
